<h1>DEMO Game Interface</h1>

<button phx-click="comp_goes_first" phx-target="<%= @myself %>">Computer Move First</button>
<button phx-click="human_goes_first" phx-target="<%= @myself %>">I Move First</button>
<%= if @game.game_state in [:won, :draw] do %>
	   <h1>GAME OVER</h1>
      <% end %>
<div class="grid" >


<%= live_component @socket, ToggleCell, state: (@cells.c1 || nil) do %>
    <button
      type="button"
      phx-target="<%= @myself %>"
      phx-click="mark"
      phx-value-cell="c1"
	  <%= if @state != nil do %>
	   disabled
	  <% end %>
	  <%= if :c1 in @game.winning_cells do %>
	   class="winner"
      <% end %>
	>

      <%= if @state != nil do %>
		<%= @state %>
      <% end %>

    </button>
  <% end %>

